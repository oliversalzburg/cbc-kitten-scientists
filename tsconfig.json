{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ES2018"],
    "module": "CommonJS",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "incremental": true,
    "declaration": false,
    "skipLibCheck": true,
    "types": []
  },
  "exclude": [".yarn", "packages/*/output"]
}
